pipeline {
    agent any

    stages {

        stage('Environment Info') {
            steps {
                sh '''
                  echo "=== BASIC SYSTEM INFO ==="
                  whoami
                  hostname
                  uname -a

                  echo "=== WORKSPACE INFO ==="
                  pwd
                  echo "WORKSPACE=$WORKSPACE"
                  ls -la

                  echo "=== TOOL VERSIONS ==="
                  java -version
                  mvn -version
                  docker --version
                '''
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                  docker build -t jenkins-demo:${BUILD_NUMBER} .
                  docker tag jenkins-demo:${BUILD_NUMBER} jenkins-demo:latest
                '''
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            echo "Docker image built: jenkins-demo:${BUILD_NUMBER}"
        }
    }
}

